        def radiusQuery = "SELECT *, (3956 * 2 * ASIN(SQRT(POWER(SIN((${lat} - abs(`lat`)) * pi()/180 / 2),2) + COS(${lat} * pi()/180 ) * COS(abs(`lat`) *  pi()/180) * POWER(SIN((${lon} - `lon`) *  pi()/180 / 2), 2)))) as distance FROM    `zip_codes` WHERE   MBRContains(LineString(Point(${lat} + ${kmRange} / 111.1, ${lon} + ${kmRange} / (111.1 / COS(RADIANS(${lat})))), Point(${lat} - ${kmRange} / 111.1, ${lon} - ${kmRange} / (111.1 / COS(RADIANS(${lat}))))), `Location`) Order By distance";

